#!/bin/sh

#
# chkconfig: 345 98 02
# description: Handle server
#
. /etc/rc.d/init.d/functions

SCRIPT="$(basename $0)"

USER="handle-server"
JAVA="/usr/bin/java"
PROJ_DIR="/opt/handle-server"
SERVER="svr_1"
COMMAND="${PROJ_DIR}/bin/hdl-server ${PROJ_DIR}/${SERVER}"
PATTERN="^java -server.+${PROJ_DIR}/${SERVER}$"

lock_file="/var/lock/subsys/$SCRIPT"

do_start()
{
        if [ ! -f "$lock_file" ] ; then
                echo -n $"Starting $SCRIPT: "
                runuser -l "$USER" -s /bin/sh -c "$COMMAND" >> /var/log/handle-server/${SERVER}.log 2>&1 &
                RETVAL=$?
                if [ $RETVAL -eq 0 ]; then
                  touch $lock_file
                  echo_success
                else
                  echo_failure
                fi
                echo
        else
                echo "$SCRIPT is locked."
                RETVAL=1
        fi
}

do_stop()
{
        echo -n $"Stopping $SCRIPT: "
        pkill -9 -f "$PATTERN" > /dev/null 2>&1
        RETVAL=$?
        if [ $RETVAL -eq 0 ]; then
          rm -f $lock_file
          rm -f "${PROJ_DIR}/${SERVER}/txns/lock"
          echo_success
        else
          echo_failure
        fi
        echo
}

do_status()
{
        PID=`pgrep -f "$PATTERN"`
        RETVAL=$?
        if [ $RETVAL -eq 0 ]; then
          echo "$SCRIPT is running"
        else
          echo "$SCRIPT is not running"
        fi
}

case "$1" in
        start)
                do_start
                ;;
        stop)
                do_stop
                ;;
        restart)
                do_stop
                do_start
                ;;
        status)
                do_status
                ;;
        *)
                echo "Usage: $0 {start|stop|restart|status}"
                RETVAL=1
esac

exit $RETVAL

